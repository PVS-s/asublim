#!/usr/bin/env zsh
(echo $$ >> ~/.xs.pid ; false ; while [[ $? -ne 0 ]] ; do
        asublim -c "$(cat /etc/X11/rgb.txt | grep '\t' | cut -f 3 | grep -v ' '| sort -R | head -n 1)" --font "$(find /usr/share/fonts -name \*.ttf | sed 's|^.*/||;s/\.ttf$//' | sort | uniq | shuf -n 1) $((RANDOM%72+10))" "$@"
done) &
